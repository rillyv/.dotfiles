# --- Volume ---
bindsym XF86AudioRaiseVolume exec --no-startup-id wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+
bindsym XF86AudioLowerVolume exec --no-startup-id wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
bindsym XF86AudioMute        exec --no-startup-id wpctl set-mute   @DEFAULT_AUDIO_SINK@ toggle

# Super alternatives
bindsym $mod+m      exec --no-startup-id wpctl set-mute   @DEFAULT_AUDIO_SINK@ toggle
bindsym $mod+period exec --no-startup-id wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+
bindsym $mod+comma  exec --no-startup-id wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-

# --- Media ---
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

# Super alternatives
bindsym $mod+space         exec --no-startup-id playerctl play-pause
bindsym $mod+Shift+comma   exec --no-startup-id playerctl previous
bindsym $mod+Shift+period  exec --no-startup-id playerctl next

### --- Screen Brightness ---
bindsym XF86MonBrightnessUp exec brightnessctl set +20%
bindsym XF86MonBrightnessDown exec brightnessctl set 20%-

bindsym Print exec --no-startup-id flameshot gui

exec_always --no-startup-id xss-lock --transfer-sleep-lock -- i3lock -c 000000
exec_always --no-startup-id libinput-gestures-setup start
exec_always --no-startup-id $HOME/.config/polybar/launch.sh --forest
exec_always --no-startup-id $HOME/.local/scripts/autorandr-detect.sh

exec --no-startup-id /usr/bin/gnome-keyring-daemon --start --components=secrets,pkcs11,ssh
exec --no-startup-id sh -c 'eval $(/usr/bin/gnome-keyring-daemon --start --components=secrets,pkcs11,ssh); export SSH_AUTH_SOCK'
exec --no-startup-id picom -b

